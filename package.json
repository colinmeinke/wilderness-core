{
  "author": {
    "name": "Colin Meinke",
    "email": "hello@colinmeinke.com",
    "url": "https://colinmeinke.com"
  },
  "babel": {
    "env": {
      "lib": {
        "plugins": [
          [
            "replace-identifiers",
            {
              "__DEV__": "process.env.NODE_ENV !== 'production'"
            }
          ],
          "transform-object-rest-spread"
        ],
        "presets": [
          "es2015"
        ]
      },
      "test": {
        "plugins": [
          "transform-object-rest-spread",
          [
            "inline-replace-variables",
            {
              "__DEV__": true
            }
          ]
        ],
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ]
      }
    }
  },
  "bugs": {
    "url": "https://github.com/colinmeinke/wilderness-core/issues"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "points": "^2.0.3",
    "svg-points": "^4.0.0",
    "tween-functions": "^1.2.0"
  },
  "description": "A Javascript API for drawing and animating SVG",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.1",
    "babel-plugin-inline-replace-variables": "^1.2.2",
    "babel-plugin-replace-identifiers": "^0.1.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-es2015": "^6.24.1",
    "bluebird": "^3.5.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "jest": "^20.0.1",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.2",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2"
  },
  "homepage": "https://github.com/colinmeinke/wilderness-core#readme",
  "license": "ISC",
  "jest": {
    "testRegex": "/tests/.*.js"
  },
  "name": "wilderness-core",
  "repository": {
    "type": "git",
    "url": "https://github.com/colinmeinke/wilderness-core.git"
  },
  "scripts": {
    "build": "yarn build:bundles && yarn build:lib",
    "build:bundles": "node bundle.js",
    "build:lib": "NODE_ENV=production BABEL_ENV=lib babel src --out-dir lib",
    "commit": "git-cz",
    "fix": "standard --fix",
    "lint": "standard --verbose | snazzy",
    "test": "jest"
  }
}
